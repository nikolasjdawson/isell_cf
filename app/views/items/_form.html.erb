<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :picture, as: :file %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :posted_date %>
    <%= f.input :expiry_date %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
